.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgb(0, 58, 145);
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.form-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.input {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 45rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  padding-right: 80rpx;
}

.input:focus {
  border-color: #007AFF;
}

.password-toggle {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.password-toggle image {
  width: 40rpx;
  height: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.action-links {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-links text {
  color: #007AFF;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
  color: #999;
  font-size: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.divider .line {
  flex: 1;
  height: 2rpx;
  background: #e8e8e8;
}

.divider text {
  margin: 0 20rpx;
}

.wechat-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07C160;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
} 