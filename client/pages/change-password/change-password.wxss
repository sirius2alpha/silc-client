/* pages/change-password/change-password.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 30rpx;
}

.card-header {
  margin-bottom: 40rpx;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.card-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #4285f4;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(66, 133, 244, 0.08);
}

.input {
  flex: 1;
  height: 96rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  border: none;
  background: transparent;
}

.password-input {
  padding-right: 80rpx !important;
}

.eye-icon {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 10rpx;
  z-index: 10;
}

.eye-icon:active {
  background: rgba(0, 0, 0, 0.08);
}

.eye-image {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.eye-icon:active .eye-image {
  opacity: 0.9;
}

.tips-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.tips-header {
  margin-bottom: 28rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.tip-icon {
  font-size: 24rpx;
  color: #4285f4;
  line-height: 1.2;
  margin-top: 6rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 60rpx;
}

.btn {
  flex: 1;
  height: 96rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f8f9fa;
  color: #6c757d;
}

.cancel-btn:not([disabled]):active {
  background: #e9ecef;
}

.submit-btn {
  background: #4285f4;
  color: white;
}

.submit-btn:not([disabled]):active {
  transform: translateY(2rpx);
  background: #3367d6;
  box-shadow: 0 6rpx 20rpx rgba(66, 133, 244, 0.3);
}

.submit-btn[disabled] {
  background: #e9ecef;
  color: #adb5bd;
}

.btn[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

 